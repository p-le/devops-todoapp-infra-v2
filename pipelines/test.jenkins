#!/usr/bin/env groovy

def POD_LABEL   = "k8sagent-test-infra"

podTemplate(label: POD_LABEL, containers: [
  containerTemplate(
    name: 'terraform',
    image: 'docker pull hashicorp/terraform:1.1.4',
    envVars: [
      containerEnvVar(key: 'GOOGLE_APPLICATION_CREDENTIALS', value: '/credentials/terraform-build-sa.json'),
    ],
    command: 'sleep',
    args: '99d'
  )
], volumes: [
  secretVolume(secretName: 'gcp-credentials', mountPath: '/credentials')
]) {
    node(POD_LABEL) {
      stage('Clone Repository') {
        checkout([
          $class: 'GitSCM',
          branches: [[name: "*/master"]],
          extensions: [],
          userRemoteConfigs: [[url: 'https://github.com/p-le/test-todoapp-infra.git']]
        ])
      }
      stage('Terraform Plan') {
        container('terraform') {
          ansiColor('xterm') {
            sh "terraform plan"
          }
        }
      }
    }
}
